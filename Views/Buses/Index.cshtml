@model IEnumerable<BusesModel>
@{
    ViewData["Title"] = "Listado de Buses";
}

<h1>Listado de Buses</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <div class="mt-3 mb-3">
                <a asp-action="Create" asp-controller="Buses" class="btn btn-success">
                    Nuevo Bus
                </a>
            </div>

            <table class="table table-bordered table-striped table-responsive" id="facultiesTable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Capacidad</th>
                        <th>Placa</th>
                        <th>Fecha Fabricacion</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var buses in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(item => buses.id_Buses)</td>
                            <td>@Html.DisplayFor(item => buses.Capacidad)</td>
                            <td>@Html.DisplayFor(item => buses.Placa)</td>
                            <td>@Html.DisplayFor(item => buses.Fecha_Fabricacion)</td>
                            <td>
                                <a asp-controller="Buses"
                                   asp-action="Edit"
                                   asp-route-id="@buses.id_Buses"
                                   class="btn btn-primary">
                                    Editar
                                </a>
                                <a asp-controller="buses"
                                   asp-action="Delete"
                                   asp-route-id="@buses.id_Buses"
                                   class="btn btn-danger">
                                    Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
