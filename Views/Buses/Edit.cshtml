@model BusesModel

@{
    ViewData["Title"] = "Editar Bus";
}

<h1>Editar Bus</h1>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="id_Buses" class="control-label"></label>
                <input asp-for="id_Buses" class="form-control" />
                <span asp-validation-for="id_Buses" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Capacidad" class="control-label"></label>
                <select class="form-select" asp-for="Capacidad" asp-items="@ViewBag.RutasBuses">
                    <option value="">Seleccione</option>
                </select>
                <span asp-validation-for="Capacidad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />

                <a asp-action="Index" class="btn btn-danger">Regresar al listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
